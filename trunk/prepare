  echo "Disable Ast drivers"
  scripts/config --disable CONFIG_DRM_AST
  # Atmel-hlcdc
  echo "Disable Atmel-hlcdc drivers"
  scripts/config --disable CONFIG_DRM_ATMEL_HLCDC
